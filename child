#include <iostream>
#include <conio.h>
#include <Windows.h>

using namespace std;

int main(int argc, char *argv[])
{
	setlocale(0, "rus");

	HANDLE hThread;
	char c;
	hThread = (HANDLE)atoi(argv[1]);

	while(true) {

		cout << "Введите 'c' чтобы приостановить процесс." << endl;
		cout << "Введите 's' чтобы продолжить процесс." << endl;
		cin >> c;
		if (c == 'c') {
			SuspendThread(hThread);
		}
		else if (c == 's') {
			ResumeThread(hThread);
		}
		system("cls");
	}
	return 0;
}
